package com.quizapp.servlet;
import com.quizapp.dao.QuizDAO;
import com.quizapp.model.Question;

import javax.servlet.annotation.WebServlet;
import javax.servlet.http.*;
import javax.servlet.*;
import java.io.IOException;
import java.util.List;

@WebServlet("/quiz/start")
public class StartQuizServlet extends HttpServlet {
    private QuizDAO qdao = new QuizDAO();
    protected void doGet(HttpServletRequest req, HttpServletResponse resp) throws ServletException, IOException {
        int quizId = Integer.parseInt(req.getParameter("id"));
        try {
            List<Question> questions = qdao.getQuestionsForQuiz(quizId);
            req.setAttribute("questions", questions);
            req.setAttribute("quizId", quizId);
            req.getRequestDispatcher("/user/attempt-quiz.jsp").forward(req, resp);
        } catch (Exception e) { throw new ServletException(e); }
    }
}


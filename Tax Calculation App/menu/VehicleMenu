package TaxCalculationApp.com.test.menu;

import java.util.List;
import TaxCalculationApp.com.test.service.VehicleService;
import java.util.Scanner;

import TaxCalculationApp.com.test.model.Property;
import TaxCalculationApp.com.test.model.Vehicle;
import TaxCalculationApp.com.test.model.VehicleType;
import TaxCalculationApp.com.test.serviceimpl.VehicleServiceImpl;

public class VehicleMenu {
	public static void showMenu() {
		final VehicleService vs=new VehicleServiceImpl();
		int ch=0;
		Scanner sc=new Scanner(System.in);
		do{
			System.out.println(" 1. ADD VEHICLE DETAILS\n 2. CALCULATE VEHICLE TAX\n 3. DISPLAY ALL VEHICLES\n 4. BACK TO MAIN MENU	");
			ch=sc.nextInt();
			switch(ch) {
			case 1:
				Vehicle v=new Vehicle();
				System.out.println("Enter registation number: ");
				v.setRegistrationno(sc.nextInt());
				System.out.println("Enter brand of vehicle: ");
				v.setBrand(sc.next());
				System.out.println("Enter max velocity of vehicle: ");
				v.setMaxvelocity(sc.nextInt());
				System.out.println("Enter capacity of vehicle");
				v.setCapacity(sc.nextInt());
				System.out.println("Enter type of vehicle 1. petrol, 2. diesel, 3.lpg/cng");
				int typec=sc.nextInt();
				VehicleType type=VehicleType.petrol;
				switch(typec) {
				case 1: 
					type=VehicleType.petrol;
					break;
				case 2:
					type=VehicleType.diesel;
					break;
				case 3:
					type=VehicleType.cng_lpg;
					break;
				default: 
					System.out.println("Enter correct choice.");
					break;
				
				}
				v.setVehicletype(type);
				System.out.println("Enter purchase cost: ");
				v.setPurchasecost(sc.nextDouble());
				vs.addVehicle(v);
				break;
			case 2: 
				System.out.println("Enter registration number to calculate tax: ");
				int regno=sc.nextInt();
				System.out.println("Vehicle tax for registration numnber "+regno+" is "+vs.calculateVehicleTax(regno));
				break;
				
			case 3:
				vs.getAllVehicles();
				break;
				
			case 4: 
				return;
			default: System.out.println("Enter correct choice");
			
			}
			
		}while(ch!=0);
	}
}
